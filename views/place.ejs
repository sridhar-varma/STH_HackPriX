<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Input PLACE ITEM Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-fixed bg-cover bg-no-repeat bg-green-100">

    <header class="bg-green-900 p-3 w-full">
        <div class="container mx-auto flex justify-between items-center">
            <a href="/" class="text-white text-xl font-bold">AgriConnect</a>
            <div class="lg:hidden">
                <button id="menuButton" class="text-white focus:outline-none">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 6h16M4 12h16m-7 6h7"></path>
                    </svg>
                </button>
            </div>
            <nav id="navMenu" class="hidden lg:flex space-x-4">
                <a href="/home" class="text-white hover:text-gray-300">Home</a>
                <!-- <a href="dealer.html" class="text-white hover:text-gray-300">Go back</a> -->
            </nav>
        </div>
    </header>

    <div id="mobileMenu"
        class="hidden absolute top-16 right-4 bg-green-700 text-white p-4 rounded-md bg-opacity-90 shadow-lg lg:hidden">
        <nav class="flex flex-col space-y-2">
            <a href="/home" class="hover:text-gray-300">Home</a>
            <!-- <a href="dealer.html" class="hover:text-gray-300">Go back</a> -->
        </nav>
    </div>

    <div class="container mt-5 flex justify-center items-center min-h-screen">
        <main class="bg-gray-100 rounded-lg shadow-md p-8 w-full md:w-1/2 lg:w-1/3">
            <section>
                <h1 class="text-2xl font-bold flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                        stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                        class="feather feather-align-justify mr-2">
                        <line x1="21" y1="10" x2="3" y2="10" />
                        <line x1="21" y1="6" x2="3" y2="6" />
                        <line x1="21" y1="14" x2="3" y2="14" />
                        <line x1="21" y1="18" x2="3" y2="18" />
                    </svg>
                    Sell an item
                </h1>
                <p>Fill out the details below</p>

                <form action="/checkDealers" method="POST">
                    <div>
                    <label for="farmerID" class="mt-2 mb-3">Farmer ID</label>
                        <input type="email" class="form-control" id="farmerID" name="farmer_id" placeholder="Your email" value="<%= sellInfo.id %>"  readonly>
                    </div>
    
                    <div>   
                    <label for="name" class="mb-3">Name</label>
                        <input type="email" class="form-control" id="name" placeholder="Your email" name="name" value="<%= sellInfo.name %>"  readonly>
                    </div>

                   <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Your email" name="email" value="<%= sellInfo.email %>"  readonly>
                </div>

                <div class="mb-3">
                    <label for="phone" class="form-label">Phone Number</label>
                    <input type="tel" class="form-control" id="phone_number" placeholder="Your phone number" name="phone_number" value="<%= sellInfo.phone_number %>"  readonly>
                </div>

                <div class="mb-3">
                    <label for="cropCategory" class="form-label">Crop Category</label>
                    <select class="form-select" id="cropCategory" name="category" required>
                        <option value="">Select a category</option>
                        <option value="cereal">Cereal</option>
                        <option value="vegetable">Vegetable</option>
                        <option value="fruit">Fruit</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="cropSubcategory" class="form-label">Crop Subcategory</label>
                    <select class="form-select" id="cropSubcategory" name="subcategory" required>
                        <option value="">Select a subcategory</option>
                        <option value="wheat">Wheat</option>
                        <option value="rice">Rice</option>
                        <option value="corn">Corn</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="amount" class="form-label">Amount</label>
                    <input type="number" class="form-control" id="amount" name="amount" placeholder="Amount" required>
                </div>

                <div class="mb-3">
                    <label for="address" class="form-label">Address</label>
                    <input type="text" class="form-control" id="address" name="address" placeholder="Your address" required>
                </div>

                <div class="mb-3">
                    <label for="address" class="form-label">State</label>
                    <input type="text" class="form-control" id="address" name="state" placeholder="Your address" required>
                </div>

                <div class="mb-3">
                    <label for="deadline" class="form-label">Deadline</label>
                    <input type="date" class="form-control" id="deadline" name="deadline" required>
                </div>
<!-- 
                <button type="submit" class="btn btn-primary">Submit</button> -->
    
                        <button type="submit"
                            class="w-full bg-green-500 text-white px-4 py-2 rounded-md hover:bg-green-600 transition duration-300">Submit</button>
                    </form>
                </section>
            </main>
        </div>
    
        <script>
            function redirectToLogin() {
                window.location.href = "login.html"; // Replace with the URL of your login page
            }
    
            function redirectToSignup() {
                window.location.href = "signup.html"; // Replace with the URL of your signup page
            }
    
            document.getElementById('menuButton').addEventListener('click', () => {
                const mobileMenu = document.getElementById('mobileMenu');
                mobileMenu.classList.toggle('hidden');
            });
        </script>
    
    </body>
    
    </html>
    