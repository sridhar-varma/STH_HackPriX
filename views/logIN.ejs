<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login Page</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <style>
    body {
      background-image: url('OSK.jpeg');
      /* Replace with your background image path */
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      margin: 0;
    }

    .form-container {
      background: rgba(255, 255, 255, 0.9);
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
    }

    .illustration {
      max-width: 100%;
      height: auto;
    }

    @media (max-width: 640px) {
      .form-container {
        width: 90%;
      }
    }
  </style>
</head>

<body>
  <header class="bg-green-900 w-full p-4 fixed top-0 left-0 z-10">
    <div class="container mx-auto flex justify-between items-center">
      <a href="/" class="text-white text-xl font-bold">AgriConnect</a>
      <div class="lg:hidden">
        <button id="menuButton" class="text-white focus:outline-none">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
          </svg>
        </button>
      </div>
      <nav id="navMenu" class="hidden lg:flex space-x-4">
        <a href="/home" class="text-white hover:text-gray-300">Home</a>
        <a href="/login" class="text-white hover:text-gray-300">Farmer</a>
        <a href="/login" class="text-white hover:text-gray-300">Dealer</a>
      </nav>
      <div id="navButtons" class="hidden lg:flex space-x-2">
        <button type="button" class="bg-white text-green-700 px-4 py-2 rounded" onclick="redirectToLogin()">Log
          in</button>
        <button type="button" class="bg-green-500 text-white px-4 py-2 rounded" onclick="redirectToSignup()">Sign
          up</button>
      </div>
    </div>
  </header>

  <div id="mobileMenu"
    class="hidden absolute top-16 right-4 bg-green-700 text-white p-4 rounded-md bg-opacity-90 shadow-lg lg:hidden">
    <nav class="flex flex-col space-y-2">
      <a href="/home" class="hover:text-gray-300">Home</a>
      <a href="/login" class="hover:text-gray-300">Farmer</a>
      <a href="/login" class="hover:text-gray-300">Dealer</a>
    </nav>
    <div class="space-y-2 mt-4">
      <button type="button" class="bg-white text-green-700 px-4 py-2 rounded w-full" onclick="redirectToLogin()">Log
        in</button>
      <button type="button" class="bg-green-500 text-white px-4 py-2 rounded w-full" onclick="redirectToSignup()">Sign
        up</button>
    </div>
  </div>

  <div class="container mx-auto mt-24 flex flex-col md:flex-row justify-center items-center">
    <div class="form-container w-full max-w-md">
      <h2 class="text-center text-2xl font-bold mb-4 text-green-700">Log In</h2>
      <form id="loginForm" class="space-y-4" action="/loginSubmit" method="POST">
        <div>
          <label for="redirectDropdown" class="block text-gray-700">Select an option</label>
          <select class="form-select mt-1 block w-full border-gray-300 rounded-md" id="redirectDropdown" name="role" required>
            <option value="">Select an option</option>
            <option value="farmer">Farmer</option>
            <option value="dealer">Dealer</option>
          </select>
        </div>

        <div>
          <label for="email" class="block text-gray-700">Email address</label>
          <input type="email" id="email" name="email" class="form-input mt-1 block w-full border-gray-300 rounded-md"
            placeholder="name@example.com" required>
        </div>
        <div>
          <label for="password" class="block text-gray-700">Password</label>
          <input type="password" id="password"name="password" class="form-input mt-1 block w-full border-gray-300 rounded-md"
            placeholder="Password" required>
        </div>
        <div class="actions flex justify-between items-center mt-4">
          <a href="forgot-password" class="text-sm text-green-700 hover:text-green-500">Forgot Your Password?</a>
          <button type="submit" class="bg-green-700 text-white px-4 py-2 rounded-md">Login</button>
        </div>
      </form>
      <div class="signup-link mt-4">
        <p>Don't Have An Account? <a href="/signup" class="text-green-700 hover:text-green-500">Sign Up</a></p>
      </div>
    </div>
  </div>

  <script>
    function redirectToLogin() {
      window.location.href = "/login"; // Replace with the URL of your login page
    }

    function redirectToSignup() {
      window.location.href = "/signup"; // Replace with the URL of your signup page
    }

    document.getElementById('menuButton').addEventListener('click', () => {
      const mobileMenu = document.getElementById('mobileMenu');
      mobileMenu.classList.toggle('hidden');
    });
  </script>
</body>

</html>